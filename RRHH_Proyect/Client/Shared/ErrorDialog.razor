<MudDialog>
    <DialogContent>
        <center><MudIcon Icon="@Icons.Material.Filled.Error" Color="Color.Error" Style="font-size: 4rem;" /></center>
        <MudText Typo="Typo.h6">@Message </MudText>
        </DialogContent>

        <DialogActions>
            <MudButton Color="Color.Error" @onclick="Close"> Ok</MudButton>            
        </DialogActions>
    </MudDialog>

    @code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Inject]
    private IDialogService DialogService { get; set; }

    [Parameter]
    public string Message { get; set; }
    

    private void Close() => MudDialog.Close();



}
<MudDialog>
    <DialogContent>
        <center><MudIcon Icon="@Icons.Material.Filled.QuestionMark" Color="Color.Info" Style="font-size: 4rem;" /></center>
        <MudText Typo="Typo.h6">@Message </MudText>
        </DialogContent>

        <DialogActions>
            <MudButton Color="Color.Inherit" @onclick="Close">Cancelar</MudButton>
            <MudButton Color="Color.Info" @onclick="Confirm">Ok</MudButton>
        </DialogActions>
    </MudDialog>

    @code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Inject]
    private IDialogService DialogService { get; set; }

    [Parameter]
    public string Message { get; set; }


    private void Confirm() => MudDialog.Close(DialogResult.Ok(true));

    private void Close() => MudDialog.Close();



}
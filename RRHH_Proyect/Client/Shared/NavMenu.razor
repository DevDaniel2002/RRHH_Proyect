@using MudBlazor
@using MudBlazor.Services


<MudPaper Width="250px" Class="d-inline-flex py-3" Elevation="0">
    <MudNavMenu Class="mud-width-full">
        <MudText Typo="Typo.h6" Class="px-4">RRHH</MudText>
        <MudDivider Class="my-2" />
        <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
        <MudNavGroup Title="Configuration" Icon="@Icons.Material.Filled.Settings" Expanded="false">
            <MudNavLink Href="/training" Icon="@Icons.Material.Filled.Add">Competencias</MudNavLink>
            <MudNavLink Href="/trainingtypes" Icon="@Icons.Material.Filled.Add">Tipos de Competencias</MudNavLink>            
        </MudNavGroup>
        <MudNavGroup Title="Experiencias de Trabajo" Icon="@Icons.Material.Filled.Work">
            <MudNavLink Href="/WorkExperienceForm" Icon="@Icons.Material.Filled.Add"> Agregar</MudNavLink>
            <MudNavLink Href="/WorkExperienceList" Icon="@Icons.Material.Filled.List">Consultar</MudNavLink>
        </MudNavGroup>
           <MudNavGroup Title="Idiomas" Icon="@Icons.Material.Filled.Language">
            <MudNavLink Href="/LanguageForm" Icon="@Icons.Material.Filled.Add"> Agregar</MudNavLink>
            <MudNavLink Href="/LanguageList" Icon="@Icons.Material.Filled.List">Consultar</MudNavLink>
        </MudNavGroup>

    </MudNavMenu>
</MudPaper>


@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
